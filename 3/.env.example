# YMCA Volunteer PathFinder - Environment Configuration
# Copy this file to .env and configure the values

# Database Configuration (if using external database)
DATABASE_URL=sqlite:///./volunteer_data.db

# Anomaly Detection - Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# Optional: Override default channel
SLACK_CHANNEL=#alerts

# Anomaly Detection - Email Notifications  
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
ALERT_EMAIL_RECIPIENTS=admin1@example.com,admin2@example.com,volunteer-coordinator@example.com

# Optional: Custom notification settings
ANOMALY_CHECK_INTERVAL_HOURS=24
ANOMALY_LOOKBACK_DAYS=30
MAX_ALERTS_PER_HOUR=10

# Application Settings
DEBUG=True
VOLUNTEER_DATA_PATH=volunteer_data.csv

# YMCA External Links
YMCA_VOLUNTEER_PAGE=https://www.myy.org/volunteering
VOLUNTEER_MATTERS_CATALOG=https://cincinnatiymca.volunteermatters.org/project-catalog
VOLUNTEER_INTEREST_FORM=https://ymcacincinnati.qualtrics.com/jfe/form/SV_0JklTjQEJTQmS2i